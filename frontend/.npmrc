# Ensure consistent package installation
engine-strict=true
prefer-offline=true
prefer-frozen-lockfile=true

# Optimize network requests
fetch-retries=3
fetch-timeout=300000
maxsockets=10

# Logging level
loglevel=error

# Cache settings
cache-min=9999999
prefer-offline=true

# Security
ignore-scripts=false
strict-ssl=true

# Platform-specific settings
@esbuild/linux-x64=true
@esbuild/darwin-x64=true
@esbuild/win32-x64=true

# Legacy peer deps (temporary if needed)
legacy-peer-deps=true
